package com.ruben.WeatherApp.Entities;

import com.google.gson.annotations.SerializedName;

import lombok.AllArgsConstructor;
import lombok.Data;

@Data
@AllArgsConstructor
public class Location {
	@SerializedName("name")
	private String city;
    private Main main;
    private Sys sys;

    public static class Sys{
    	private String country;
    }
    
    public static class Main{
    	@SerializedName("temp")
        private double tempKelvil;
    	private String humidity;
    	
    	public double getTempCelsius() {
    		return tempKelvil - 273.15;
    	}
    }
    
    public static class Weather {
        @SerializedName("main")
        private String main; // Main weather condition

        @SerializedName("description")
        private String description; // Detailed weather condition
    }
    
    
	@Override
	public String toString() {
		return "City: " + city + "(" + sys.country + ")" +
				"\nTemperature: " + String.format("%.2f", main.getTempCelsius()) + "ยบ (" + main.tempKelvil + "K)" +
				"\nHumidity= " + main.humidity + "%";
	}
}
